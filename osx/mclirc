source /usr/local/share/bash-completion/bash_completion
source $HOME/.bashrc
echo "le completion"
source $MCLIPATH/mesos-cli-completion
source $MCLIPATH/marathon-cli-completion
alias mcli=mesos-cli

diagnostic() {
  MASTER_IP="$(ls -d -w1 *_master | head -n 1 | sed 's/_master//')"
  echo "Master IP is $MASTER_IP"
  echo "Marathon port is $MARATHON_PORT"
  MARATHON_PORT=$(ls -w1 ${MASTER_IP}_master/*:v2_apps.json.gz | cut -f 2 -d / | cut -f 1 -d :)
  export MESOS_CURL_CMD=diagnostic-curl
  export MARATHON_CURL_CMD=diagnostic-curl-marathon
  export MESOS_MASTER_URL=http://${MASTER_IP}:5050
  export MARATHON_MASTER_URL=http://${MASTER_IP}:${MARATHON_PORT}
}
